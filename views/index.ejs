<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.3/angular.min.js"></script>
    <script src="https://unpkg.com/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="AirNow-Alert" ng-controller="MainCtrl">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div class="row">
      <label>ZIP Code</label>
      <input type="text" ng-model="zip" maxlength="5" />
      <button type="submit" ng-click="getAQI();" class="btn btn-primary">Submit</button>
    </div>
    <div ng-show="aqi" ng-repeat="measurement in aqi">
      <div class="row {{measurement.quality}}">
        {{measurement.ParameterName}}: {{measurement.AQI}} - {{measurement.Category.Name}}
      </div>
    </div>
  </body>
</html>
